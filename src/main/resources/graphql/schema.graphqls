type User {
  id: ID!
  email: String!
  name: String!
  role: String
  credits: Int
  subscriptionActive: Boolean
  isEmailVerified: Boolean
  lastLogin: String
}

type Query {
  users: [User!]!
  getUserByEmail(email: String!): User
}

type Mutation {
  createUser(
    email: String!
    password: String!
    name: String
    role: String
  ): User!
}
